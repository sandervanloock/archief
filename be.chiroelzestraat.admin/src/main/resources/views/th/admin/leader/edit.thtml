<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title th:fragment="title">Modify entity</title>
</head>
<body th:fragment="content">

<h4 class="page-header" th:if="${pageTitle != null}" th:text="${pageTitle}">
    Page title
</h4>

<div th:if="${successMessage}" class="alert alert-success alert-dismissible" role="alert">
	<span th:text="${messages.withNameSingular(successMessage, entityConfiguration.getLabel(entity))}">
		Entity has been saved succesfully.
	</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="tabbable filled">
    <ul class="nav nav-tabs">
        <li th:each="tab : ${entityMenu.items}" th:classappend="${tab.selected}? 'active'">
            <a th:href="@{${tab.url}}" th:text="${tab.title}">tab menu</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active">
            <form method="post"
                  th:action="@{${@adminWeb.path('/entities/leader/' + (leader.new ? 'create' : leader.id))}}"
                  role="form" enctype="multipart/form-data" th:object="${leader}">
                <div class="row">
                    <div class="col-md-6">
                        <input type="hidden" th:field="*{id}"/>

                        <div class="form-group">
                            <label for="lastName">Lastname</label>
                            <input class="form-control" type="text" th:field="*{lastName}"/>
                        </div>

                        <div class="form-group">
                            <label for="firstName">first name</label>
                            <input class="form-control" type="text" th:field="*{firstName}"/>
                        </div>

                        <div class="form-group">
                            <label for="birthDay">Birth day</label>
                            <input class="form-control js-form-element-datepicker hasDatepicker" type="text" th:field="*{birthDay}"/>
                        </div>

                        <div class="form-group">
                            <img th:src="*{avatar}" th:if="*{avatar}"/>
                            <label for="avatar">Avatar</label>
                            <input class="form-control" type="file" name="avatar-upload" id="avatar-upload"/>
                        </div>

                        <input class="btn btn-primary" type="submit" value="Save"/>
                        <a class="btn btn-link" th:href="@{${@adminWeb.path('/entities/leader')}}">Cancel</a>
                    </div>
                    <div class="col-md-6"></div>
                </div>
            </form>
        </div>
    </div>

</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.js"></script>

<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.js"></script>

<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js"></script>

<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/i18n/jquery-ui-i18n.min.js"></script>
<script src="/admin/static/js/adminweb/main.js"></script>

<script src="/admin/static/js/adminweb/ie10-viewport-bug-workaround.js"></script>

<script src="/admin/static/js/entity/entity-module.js"></script>


<script src="/admin/static/js/entity/dependson.js"></script>

<script src="/admin/static/js/entity/form-elements.js"></script>
<div id="ui-datepicker-div" class="ui-datepicker ui-widget ui-widget-content ui-helper-clearfix ui-corner-all"></div>

</body>
</html>